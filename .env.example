# LlamaReportPro 环境变量配置模板
# 复制此文件为 .env 并填入您的实际API密钥

# OpenAI API配置 (必需)
OPENAI_API_KEY=your_openai_api_key_here

# LlamaParse API配置 (可选，用于高级PDF解析)
# 如果不配置，系统将使用基础PDF解析
LLAMA_CLOUD_API_KEY=your_llamaparse_api_key_here

# 应用配置 (可选)
# Streamlit应用端口
STREAMLIT_PORT=8501

# 调试模式
DEBUG=false

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 数据存储路径
STORAGE_PATH=./storage

# 缓存配置
ENABLE_CACHE=true
CACHE_TTL=3600

# 模型配置
DEFAULT_LLM_MODEL=gpt-4o
DEFAULT_EMBEDDING_MODEL=text-embedding-3-large
LLM_TEMPERATURE=0.1

# 检索配置
SIMILARITY_TOP_K=10
SIMILARITY_CUTOFF=0.7

# 安全配置
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,xlsx,xls,docx,doc,pptx,ppt,csv,txt,png,jpg,jpeg

# 性能配置
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=300
